<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A1A2E"/>
        </shape>
    </item>
    <!-- Centered microphone icon with padding -->
    <item
        android:left="100dp"
        android:right="100dp"
        android:top="30dp"
        android:bottom="30dp">
        <bitmap
            android:src="@drawable/ic_launcher_foreground_ke"
            android:gravity="center"/>
    </item>
</layer-list>
